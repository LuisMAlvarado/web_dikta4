{% extends 'base.html.twig' %}

{% block body %}
    <h1>Categorias list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Abreviacion</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for categorium in categorias %}
            <tr>
                <td><a href="{{ path('categoria_show', { 'id': categorium.id }) }}">{{ categorium.id }}</a></td>
                <td>{{ categorium.nombre }}</td>
                <td>{{ categorium.abreviacion }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('categoria_show', { 'id': categorium.id }) }}">show</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
