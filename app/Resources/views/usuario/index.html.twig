{% extends 'base.html.twig' %}

{% block body %}
    <h1>Usuarios list</h1>

    <table>
        <thead>
            <tr>
                <th>Numeroeconomico</th>
                <th>Nombre</th>
                <th>Apellidopaterno</th>
                <th>Apellidomaterno</th>
                <th>Password</th>
                <th>Salt</th>
                <th>Enable</th>
                <th>Loked</th>
                <th>Expired</th>
                <th>Createat</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for usuario in usuarios %}
            <tr>
                <td><a href="{{ path('usuario_show', { 'id': usuario.numeroEconomico }) }}">{{ usuario.numeroEconomico }}</a></td>
                <td>{{ usuario.nombre }}</td>
                <td>{{ usuario.apellidoPaterno }}</td>
                <td>{{ usuario.apellidoMaterno }}</td>
                <td>{{ usuario.password }}</td>
                <td>{{ usuario.salt }}</td>
                <td>{% if usuario.enable %}Yes{% else %}No{% endif %}</td>
                <td>{% if usuario.loked %}Yes{% else %}No{% endif %}</td>
                <td>{{ usuario.expired }}</td>
                <td>{% if usuario.createAt %}{{ usuario.createAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('usuario_show', { 'id': usuario.numeroEconomico }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('usuario_edit', { 'id': usuario.numeroEconomico }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('usuario_new') }}">Create a new usuario</a>
        </li>
    </ul>
{% endblock %}
